<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".Flashmob.MemberFragment">

    <RelativeLayout
        android:id="@+id/memberRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Leader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Leader"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/leaderIv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/Leader"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/leader" />

        <TextView
            android:id="@+id/leaderInfo"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="65dp"
            android:layout_toRightOf="@+id/leaderIv"
            android:text="LeaderName / LeaderAge" />

        <TextView
            android:id="@+id/Members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Leader"
            android:layout_below="@+id/leaderIv"
            android:layout_marginTop="25dp"
            android:text="Members"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>